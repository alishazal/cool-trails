<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Cool Trails - Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/static/styles.css">
</head>

<body>
  <div class="container mt-4">
    <h1>Cool Trails</h1>
    <p>{{message}}</p>

    <!-- Filter Button -->
    <div class="filter-button mb-3">
      <button class="btn btn-outline-success" type="button" onclick="openFilter()">Filter</button>
    </div>

    <!-- Search Form -->
    <form class="d-flex" action="/search" method="get">
      <input class="form-control me-2" type="search" placeholder="Search trails" aria-label="Search" name="q">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>

  <!-- Overlay -->
  <div id="overlay" class="overlay" onclick="closeFilter()"></div>

  <!-- Filter Sidebar -->
  <div id="filterSidebar" class="filter-sidebar">
    <button class="btn-close float-end" aria-label="Close" onclick="closeFilter()"></button>
    <h4 class="mt-4 mb-3">Filters</h4>

    <div class="filter-section">
      <h5>Shading</h5>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="shade25">
        <label class="form-check-label" for="shade25">25%</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="shade50">
        <label class="form-check-label" for="shade50">50%</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="shade75">
        <label class="form-check-label" for="shade75">75%</label>
      </div>
    </div>

    <div class="filter-section">
      <h5>Difficulty</h5>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="easy">
        <label class="form-check-label" for="easy">Easy</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="medium">
        <label class="form-check-label" for="medium">Medium</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="hard">
        <label class="form-check-label" for="hard">Hard</label>
      </div>
    </div>

    <div class="filter-section">
      <h5>Length</h5>
      <div class="slider-label">
        <span>0mi</span>
        <span>50mi+</span>
      </div>
      <input type="range" class="form-range" min="0" max="80" id="lengthRange">
    </div>

    <div class="filter-section">
      <h5>Elevation</h5>
      <div class="slider-label">
        <span>0ft</span>
        <span>1500ft+</span>
      </div>
      <input type="range" class="form-range" min="0" max="1500" id="elevationRange">
    </div>

    <div class="filter-section">
      <h5>Distance</h5>
      <div class="slider-label">
        <span>0mi</span>
        <span>60mi+</span>
      </div>
      <input type="range" class="form-range" min="0" max="100" id="distanceRange">
    </div>

    <div class="filter-footer">
      <a href="#" class="text-success" onclick="clearFilters()">Clear</a>
      <button class="btn btn-success">Show X trails</button>
    </div>
  </div>

  <script>
    function openFilter() {
      document.getElementById('filterSidebar').classList.add('open');
      document.getElementById('overlay').classList.add('show');
    }

    function closeFilter() {
      document.getElementById('filterSidebar').classList.remove('open');
      document.getElementById('overlay').classList.remove('show');
    }

    function clearFilters() {
      document.querySelectorAll('.form-check-input').forEach(el => el.checked = false);
      document.getElementById('lengthRange').value = 0;
      document.getElementById('elevationRange').value = 0;
      document.getElementById('distanceRange').value = 0;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>